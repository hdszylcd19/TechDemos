<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMinor">40%</item>
        <item name="android:windowMinWidthMajor">40%</item>
    </style>

    <style name="LoadingDialog" parent="@style/MyDialog">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="dialog1" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowMinWidthMinor">40%</item>
        <item name="android:windowMinWidthMajor">40%</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowMinWidthMinor">40%</item>
        <item name="android:windowMinWidthMajor">40%</item>
    </style>

    <!--dialog弹窗透明样式-->
    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMinor">40%</item>
        <item name="android:windowMinWidthMajor">40%</item>
    </style>

    <style name="FullDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
    </style>
</resources>